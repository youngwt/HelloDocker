@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="m-1 p-1">
    <h4 class="bg-primary bg-success text-xs-center p-1 text-white">
        @ViewBag.Message
    </h4> 
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th> Name</th>
                <th>Category</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td> @product.Category</td>
                    <td> @product.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>
